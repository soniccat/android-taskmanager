<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppActivityTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>

        <!-- Hide ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Dark Toolbar -->
        <item name="toolbarStyle">@style/AppActivityTheme.Toolbar</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppActivityTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
